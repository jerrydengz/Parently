<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_view_background">

    <Space
        android:id="@+id/space"
        android:layout_width="15sp"
        android:layout_height="20sp"
        android:layout_marginStart="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp" />

    <Space
        android:id="@+id/space2"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coin_flip_result_icon"
        tools:ignore="SmallSp" />

    <Space
        android:id="@+id/space3"
        android:layout_width="20sp"
        android:layout_height="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flip_date_time"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/coin_flip_result_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="70sp"
        android:minHeight="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space"
        app:srcCompat="@drawable/ic_baseline_check_circle_24"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/name_flip_history"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/child_name_txt"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/coin_flip_result_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/coin_flip_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/coin_flip_result_icon"
        app:layout_constraintTop_toBottomOf="@+id/name_flip_history"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/flip_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/coin_flip_result_icon"
        app:layout_constraintTop_toBottomOf="@+id/flip_result"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/flip_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/coin_flip_choice"
        app:layout_constraintTop_toBottomOf="@+id/name_flip_history"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>