            />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text="@string/save_btn_text" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:minHeight="48dp"
            android:text="@string/delete_btn_txt" />
    </LinearLayout>


