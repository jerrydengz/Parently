<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lavender"
    tools:context=".MainActivity">


    <!--https://stackoverflow.com/questions/3470420/is-it-possible-to-evenly-distribute-buttons-across-the-width-of-a-linearlayout/3470733#3470733-->
    <!--https://stackoverflow.com/questions/56954471/button-drawable-icon-not-showing/56954619-->
    <!--https://material.io/components/buttons/android#using-buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnChildren"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/children_button"
            app:icon="@drawable/children_icon"
            tools:ignore="TextContrastCheck" />

        <Space
            android:layout_width="0dp"
            android:layout_height="60sp">
        </Space>

        <Button
            android:id="@+id/btnFlipCoin"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/flip_coin_button"
            app:icon="@drawable/coin_flip_icon"
            tools:ignore="TextContrastCheck" />

        <Space
            android:layout_width="0dp"
            android:layout_height="60sp">
        </Space>

        <Button
            android:id="@+id/btnTimeout"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/timeout_button"
            app:icon="@drawable/timer_icon_filled"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>