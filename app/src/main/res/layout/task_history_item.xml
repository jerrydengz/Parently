<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_view_background">

    <Space
        android:id="@+id/space5"
        android:layout_width="40dp"
        android:layout_height="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/taskChildName"
        android:layout_width="275sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/child_name_txt"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/childIconTaskHistory"
        app:layout_constraintTop_toBottomOf="@+id/space5"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/taskTime"
        android:layout_width="275sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="@string/task_history_completed_turn"
        app:layout_constraintStart_toEndOf="@+id/childIconTaskHistory"
        app:layout_constraintTop_toBottomOf="@+id/taskChildName"
        tools:ignore="TextContrastCheck" />

    <Space
        android:layout_width="40dp"
        android:layout_height="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskTime"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/childIconTaskHistory"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/child_portrait_default"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>